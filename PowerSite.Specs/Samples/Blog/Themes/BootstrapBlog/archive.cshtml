@using System.Linq
@using PowerSite.DataModel
@using RazorEngine.Templating
@using System.Collections.Generic
@inherits  TemplateBase<IEnumerable<Document>>
@Include("header.cshtml", new { Author = Site.Current.Author, Title = Site.Current.Title })
<body>
	<!--[if lt IE 7]>
		 <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->
	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">@Site.Current.Title</a>
			</div>
			<div class="navbar-collapse collapse navbar-responsive-collapse">
				<ul class="nav navbar-nav navbar-right">
					<li><a href="/">Home</a></li>
					<li class="active"><a href="/blog">Blog</a></li>
					<li><a href="#">About Me</a></li>
				</ul>
			</div><!--/.navbar-collapse -->
		</div>
	</div>

	<div class="container">
		@*<div class="blog-header">
			<h1 class="blog-title">@Site.Current.Title</h1>
			<p class="lead blog-description">@Site.Current.Description</p>
		</div>*@
		<div class="row">
			<div class="col-sm-8 blog-main">
				@foreach (var blog in Model)
				{
					<div class="blog-post">
						<a href="/@blog.RelativeUrl"><h2 class="blog-post-title">@blog.Title</h2></a>
						<p class="blog-post-meta">@blog.Date.ToString("d") by <a href="#">@blog.Author.Name</a></p>
						@Raw(blog.Summary)
					</div>
				}
			</div><!--/blog-main-->
			@Include("blog-sidebar.cshtml", Model)
		</div>

		<hr>
		<footer>
			<p>&copy; @Site.Current.Author.Name 2014</p>
		</footer>
	</div> <!-- /container -->
	@Include("script-footer.cshtml")
</body>
</html>
